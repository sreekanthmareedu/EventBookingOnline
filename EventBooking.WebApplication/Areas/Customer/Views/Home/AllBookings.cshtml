@model List<BookingDTO>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Bookings
            </h2>

        </div>
 

    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>

                <th>
                   Booking Id
                </th>
                <th>
                   Event Id
                </th>
                <th>
                    Seats Booked
                </th>
                

                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                @if (obj.UserId == ViewBag.UserId)
                {
                    <tr>
                        <td>@obj.BookingId</td>
                    <td>@obj.EventId</td>
                    <td>@obj.TotalSeatsBooked</td>
                    @*<td>@obj.availableSeats</td>
                    <td>@obj.eventStatus</td>*@

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Event" asp-action="Update" asp-route-id="@obj.BookingId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Event" asp-action="Delete" asp-route-id="@obj.BookingId" class="btn btn-danger mx-2 ">
                                <i class="bi bi-trash"></i> Delete
                            </a>

                        </div>
                    </td>


                </tr>
                }
            }
        </tbody>


    </table>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}