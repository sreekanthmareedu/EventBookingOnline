@model IEnumerable<BookingVM>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Bookings
            </h2>

        </div>
 

    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>

                <th>
                   Booking Id
                </th>
                <th>
                   Event Name
                </th>
                <th>
                    Seats Booked
                </th>
                        
                <th>
                    Location
                </th>
                <th>
                    Event Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                @if (obj.bookingVM.UserId == ViewBag.UserId)
                {

                    <tr>
                        <td>@obj.bookingVM.BookingId</td>
                        <td>@obj.bEventsVM.eventName</td>
                        <td>@obj.bookingVM.TotalSeatsBooked</td>
                        <td>@obj.bEventsVM.location</td>
                        <td>@obj.bEventsVM.eventDate</td>

                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-area="Customer"  asp-controller="Home" asp-action="Update" asp-route-id="@obj.bookingVM.BookingId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-area="Customer" asp-controller="Home" asp-action="DeleteBooking" asp-route-id="@obj.bookingVM.BookingId" class="btn btn-danger mx-2 ">
                                    <i class="bi bi-trash"></i> Delete
                                </a>

                            </div>
                        </td>


                    </tr>
                }
            }
        </tbody>


    </table>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}